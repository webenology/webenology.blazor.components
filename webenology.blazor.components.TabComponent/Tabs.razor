@namespace webenology.blazor.components.TabComponent

<CascadingValue Value="this">
    <div class="@CssStyle.TabContainerCss">
        <ul class="@CssStyle.TabListCss">
            @foreach (var tab in TabPages)
            {
                <li class="@CssStyle.TabListItemCss">
                    <a class="@CssStyle.TabLinkCss @(ActivePage == tab ? CssStyle.ActiveTabCss: "")" href="javascript:;" @onclick="@(_ => ActivatePage(tab))">
                        @tab.Title
                        <span class="@CssStyle.BadgeCss">@tab.Badge</span>
                    </a>
                </li>
            }
        </ul>
        <div class="@CssStyle.TabContentContainerCss">
            @ChildContent
        </div>
    </div>
</CascadingValue>

